<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/white_button"
    android:padding="2dip">

    <TextView
        android:id="@+id/trend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place"
        android:padding="10dp"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_weight="0.5"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/trend_name"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/trend_flights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="flights"
            android:padding="10dp"
            android:textSize="15sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/trend_travellers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Price"
            android:textSize="15sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:textColor="@color/black" />
    </LinearLayout>


</RelativeLayout> <!-- From: file:/I:/yatra/FirstJsonEx2/app/src/main/res/layout/trending_place.xml -->